extends layout
block scripts
    script.
        var rowIndex=0;
        $(document).ready(function(){
           $(".start_date").change(function(){
              
              var sdate = $(this).val();
              var date = new Date(sdate);
              var year = date.getFullYear(); 
              $("#year"+rowIndex).val(year);
              rowIndex++;
            });
            $(".start_date").datepicker({dateFormat: "yy-mm-dd"});
            
        });
